<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:id="@+id/tabbar"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/textColor"
          android:textSize="16sp"
          android:text="Daily"
          android:id="@+id/daily_title"
          android:layout_marginLeft="10dp"
          />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_below="@id/tabbar"
        android:id="@+id/break_line"
        android:layout_height="5dp">

        <LinearLayout
            android:layout_width="match_parent"


            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/inactive"
            android:orientation="horizontal" />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/break_line"
        >
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:overScrollMode="never"
            android:paddingLeft="80px"
            android:paddingRight="80px"
            android:clipToPadding="false"
            android:foregroundGravity="center"
            android:id="@+id/daily_view_pager"
            android:layout_height="340dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        android:text="Weekly Report"
        android:layout_marginTop="20dp"
        android:id="@+id/weekly"

        android:layout_marginLeft="10dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_marginTop="10dp"
        android:background="@drawable/weekly_bg"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/tv1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:text="Time To Workout"
            android:fontFamily="@font/poppins_bold"
            />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_below="@+id/tv1"
                android:paddingLeft="30dp"
                android:id="@+id/chart"
                android:layout_marginTop="10dp"
                android:paddingRight="30dp"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"

                    android:id="@+id/time_to_workout_rv"
                    android:layout_centerHorizontal="true"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_height="5dp"
                    android:layout_marginTop="45dp"
                    android:src="@drawable/dotted"
                    android:layerType="software" />
            </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ln1"

            android:layout_alignParentStart="true"
            android:layout_below="@id/chart"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:text="30 minute"
                android:id="@+id/tv3"
                android:fontFamily="@font/poppins_bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:text="/today"
                android:id="@+id/tv4"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/poppins"
                />
        </LinearLayout>
    </RelativeLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>