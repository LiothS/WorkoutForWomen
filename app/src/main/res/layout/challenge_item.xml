<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="213dp"
    android:layout_height="253dp"
    android:layout_marginRight="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/challenge_cardview"
    app:cardCornerRadius="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/challenge_container"
        android:background="@color/test_red"
        android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="85dp"
           android:id="@+id/challenge_img"
           android:orientation="vertical"
           android:layout_margin="16dp"
           android:layout_alignParentStart="true"
           android:layout_alignParentTop="true"
           android:gravity="center"
           android:background="@drawable/ic_shield"
           android:layout_height="92dp"
           android:layout_alignParentLeft="true">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/question_mark"
               android:textSize="28dp"
               android:text="\?"
               android:textStyle="bold"
                android:textColor="@color/test_red"
               />
       </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/challenge_lv"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:text="Beginer - 17 mins"
            android:layout_below="@+id/challenge_img"

            android:layout_marginLeft="16dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/challenge_name"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="Training Aim"
            android:fontFamily="@font/poppins_bold"
            android:layout_below="@+id/challenge_lv"
            android:layout_marginLeft="16dp"

            />
        <TextView
            android:layout_width="143dp"
            android:layout_height="44dp"
            android:id="@+id/challenge_lets_go"
            android:text="Let's go"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:gravity="center"
            android:paddingRight="20dp"
            android:textColor="@color/textColor"
            android:background="@drawable/lets_go_btn_bg"
            android:fontFamily="@font/poppins_bold"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="20dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>