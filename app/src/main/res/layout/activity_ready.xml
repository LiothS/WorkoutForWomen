<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Activity.ReadyActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/active_yellow"
        android:layout_height="@dimen/rest_high">
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ready_text"
               android:layout_gravity="center_horizontal"
                android:text="Rest"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/text_25"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ready_time"
                android:layout_marginTop="6dp"
                android:text="00:15"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/textColor"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/text_25"

                />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_16"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="86dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="+10"
                android:background="@drawable/movement_btn3"
                android:id="@+id/time_info"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/text_13"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_gravity="start"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:layout_alignParentLeft="true" />
            <TextView
                android:layout_width="86dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Skip"
                android:background="@drawable/movement_btn3"
                android:id="@+id/skip_btn"
                    android:layout_alignParentEnd="true"
                android:textSize="@dimen/text_13"
                android:paddingTop="6dp"
              android:layout_gravity="end"
                android:paddingBottom="6dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#F9F9F9"
        android:layout_marginBottom="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_32"
        android:paddingTop="@dimen/margin_16"
        android:layout_height="118dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/default_nav_item_padding"
            android:layout_toLeftOf="@+id/gif_ready"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_13"
                android:id="@+id/next_exercise"
                android:text="Next Movement"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/textColor"
                android:textSize="@dimen/text_16"
                android:id="@+id/next_name"
                android:text="Exercise number two"

                />
        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/list_gif_width"
            android:layout_height="@dimen/list_gif_height"
            android:layout_centerVertical="true"
            android:src="@drawable/lose_arm1"
            android:scaleType="fitXY"

            android:id="@+id/gif_ready"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/default_nav_item_padding"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</LinearLayout>
</androidx.core.widget.NestedScrollView>