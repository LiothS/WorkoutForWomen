<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/white"

    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
           android:paddingBottom="16dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Body"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/fullbody"

                android:layout_marginLeft="10dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"

                android:id="@+id/fullbody_recyclerview"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ads Training"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/text1"

                android:layout_marginLeft="10dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"

                android:id="@+id/training_recyclerview1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arms Training"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/text2"

                android:layout_marginLeft="10dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"

                android:id="@+id/training_recyclerview2"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Legs Training"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/text3"

                android:layout_marginLeft="10dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"

                android:id="@+id/training_recyclerview3"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>