<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/margin_16"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
       <androidx.cardview.widget.CardView
           app:cardBackgroundColor="@color/inactive"
           app:cardCornerRadius="@dimen/margin_8"
           android:id="@+id/img_container"
           android:layout_width="@dimen/movement_item_img_width"
           android:layout_height="@dimen/movement_item_img_width">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ge1"
                android:id="@+id/movement_item_img"
                />
       </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/margin_16"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/next"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/img_container"
        android:id="@+id/info_container"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movement 1"
            android:paddingRight="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/move_item_name"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_13"
            android:fontFamily="@font/poppins_bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:30"
            android:id="@+id/move_item_time"
            android:textColor="@color/textColor"
            android:textSize="@dimen/text_13"
            android:fontFamily="@font/poppins"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/next"
        android:src="@drawable/ic_baseline_navigate_next_24"
        android:layout_alignParentEnd="true"
        android:alpha="0.5"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true" />
</RelativeLayout>