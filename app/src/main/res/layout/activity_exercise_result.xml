<?xml version="1.0" encoding="utf-8"?>

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:padding="0dp"

        android:layout_height="match_parent"
        tools:context=".Activity.MovementListActivity">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:titleEnabled="false">
                <RelativeLayout
                    android:layout_width="match_parent"
                    app:layout_collapseMode="parallax"
                    android:id="@+id/exercise_img"
                    android:background="@drawable/lose_arm1"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#373845"
                        android:alpha="0.7"
                        >

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/complete"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/act_line"
                            android:text="Workout Completed"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_20"
                            android:fontFamily="@font/poppins_bold"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/excellent"
                            android:layout_below="@+id/complete"
                            android:layout_centerHorizontal="true"

                            android:text="You are excellent"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_16"
                            android:fontFamily="@font/poppins"
                            />
                    </RelativeLayout>
                </RelativeLayout>
                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_collapseMode="pin"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    app:titleTextColor="@color/black"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp"
                    android:id="@+id/toolbar"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"

                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_alignParentStart="true"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/back_icon_white"
                            android:layout_marginLeft="17dp"
                            android:id="@+id/back_btn"
                            android:layout_alignParentLeft="true" />
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_height="30dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="17dp"
                            android:id="@+id/save_btn"
                            android:src="@drawable/ic_bookmark_outline"
                            android:layout_alignParentRight="true" />
                    </RelativeLayout>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-100dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="0dp"

                app:cardCornerRadius="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/margin_20"
                        android:paddingRight="@dimen/margin_20"
                        android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_16"
                                android:id="@+id/feel"
                                android:layout_marginTop="@dimen/margin_8"
                                android:text="How do you feel ?"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="@color/black"
                                android:layout_gravity="center_horizontal"
                                />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/text_16"
                            android:orientation="horizontal"
                            android:layout_gravity="start"
                            android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_width="@dimen/full_progress"
                                    android:orientation="vertical"
                                    android:gravity="center_horizontal"
                                    android:layout_alignParentStart="true"
                                    android:id="@+id/item1"
                                    android:layout_height="@dimen/full_progress"
                                    android:layout_alignParentLeft="true">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="😌"
                                        android:textSize="@dimen/view_pager_padding"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Too easy"
                                        android:id="@+id/easy"
                                        android:textSize="@dimen/text_13"
                                        android:textColor="@color/black"
                                        />
                                </LinearLayout>
                            <LinearLayout
                                android:layout_width="@dimen/full_progress"
                                android:orientation="vertical"
                                android:id="@+id/item2"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/min_bg"
                                android:layout_height="@dimen/full_progress">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="😍"
                                    android:textSize="@dimen/view_pager_padding"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Just Right"
                                    android:id="@+id/just_right"
                                    android:textSize="@dimen/text_13"
                                    android:textColor="@color/black"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="@dimen/full_progress"
                                android:orientation="vertical"
                                android:layout_gravity="end"
                                android:gravity="center_horizontal"
                                android:layout_alignParentEnd="true"
                                android:id="@+id/item3"
                                android:layout_height="@dimen/full_progress"
                                android:layout_alignParentRight="true">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="😵"
                                    android:textSize="@dimen/view_pager_padding"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Too Hard"
                                    android:id="@+id/too_hard"
                                    android:textSize="@dimen/text_13"
                                    android:textColor="@color/black"
                                    />
                            </LinearLayout>
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/margin_16"

                            android:layout_height="1dp"

                            android:background="@color/inactive"
                            android:orientation="horizontal" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/margin_16"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="@dimen/list_gif_width"
                                android:orientation="vertical"

                                android:background="@drawable/min_bg"
                                android:gravity="center_horizontal"
                                android:paddingTop="@dimen/margin_20"
                                android:paddingBottom="@dimen/margin_16"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/ic_clock"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/time"
                                    android:text="Time"
                                    android:layout_marginTop="@dimen/margin_8"
                                    android:textColor="@color/textColor"
                                    android:fontFamily="@font/poppins"
                                    android:textSize="@dimen/text_13"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/total_time"
                                    android:text="00:10"
                                    android:textColor="@color/textColor"
                                    android:fontFamily="@font/poppins_bold"
                                    android:textSize="@dimen/margin_20"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="@dimen/list_gif_width"
                                android:orientation="vertical"
                                android:layout_marginLeft="@dimen/margin_16"
                                android:background="@drawable/min_bg"
                                android:gravity="center_horizontal"
                                android:paddingTop="@dimen/margin_20"
                                android:paddingBottom="@dimen/margin_16"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/ic_calories"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/calories"
                                    android:text="Calories"
                                    android:layout_marginTop="@dimen/margin_8"
                                    android:textColor="@color/textColor"
                                    android:fontFamily="@font/poppins"
                                    android:textSize="@dimen/text_13"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/total_calories"
                                    android:text="10000"
                                    android:textColor="@color/textColor"
                                    android:fontFamily="@font/poppins_bold"
                                    android:textSize="@dimen/margin_20"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_16"
                            android:textColor="@color/textColor"
                            android:text="Share with friends"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center_horizontal"
                            android:id="@+id/share_with_friends"
                            android:padding="@dimen/default_nav_item_padding"
                            android:background="@drawable/movement_btn"
                            android:layout_marginTop="@dimen/margin_20"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_16"
                            android:textColor="@color/textColor"
                            android:text="Finish"
                            android:id="@+id/finish"
                            android:fontFamily="@font/poppins_bold"
                            android:gravity="center_horizontal"
                            android:padding="@dimen/default_nav_item_padding"
                            android:background="@drawable/movement_btn2"
                            android:layout_marginTop="@dimen/margin_16"
                            />
                    </LinearLayout>

            </androidx.cardview.widget.CardView>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
